ScreenManager:
    StartupScreen:
    Startup1Screen:
    Startup2Screen:
    DashboardScreen:
    LoginScreen:
    SignupScreen:
    
    
<StartupScreen>:
    name: 'startup'
    Screen:  
        Image:
            source: "images\GoalMaster_logo1.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
        MDLabel:
            text: "Welcome!"
            font_size: "30dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            color: "011F4B"

        MDLabel:
            text: "PRESS HERE TO START YOUR JOURNEY"
            font_size: "10dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.30}
            color: "011F4B"

        MDRectangleFlatButton:
            text: "START"
            text_color: 1, 1, 1, 1
            md_bg_color: 0.0039, 0.1216, 0.2941, 1
            pos_hint: {'center_x':0.5,'center_y':0.20}
            on_press: root.manager.current = 'startup1'

<Startup1Screen>
    name: 'startup1'
    Screen:
        MDLabel:
            text: "Welcome to"
            font_size: "20dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.90}
            color: "011F4B"

        MDLabel:
            text: "Goal Master"
            font_size: "30dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            bold: True
            color: "011F4B"
            font_name: 'Roboto-Black.ttf'

        Image:
            source: "images\GoalMaster.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            size_hint: .8, .8

        MDLabel:
            font_size: "14sp"
            text: "Goal Master is a user-friendly financial management app that empowers individuals to set and achieve personalized savings goals with a comprehensive dashboard and easy tracking features."
            pos_hint: {"center_x": 0.5, "center_y": 0.40}
            -text_size: root.width - dp(100), None    
            halign: 'center'
            font_name: 'Roboto-Regular.ttf'

        MDRectangleFlatButton:
            text: "Next"
            size_hint: .66, .065
            text_color: 1, 1, 1, 1
            md_bg_color: 0.0039, 0.1216, 0.2941, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            halign: 'center'
            on_press: root.manager.current = 'startup2' 
        
        MDRectangleFlatButton:
            text: "Skip"
            text_color: '#808080'
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5,"center_y": 0.05}
            on_press: root.manager.current = 'signup'

<Startup2Screen>
    name: 'startup2'
    Screen:
        MDLabel:
            text: "Create your Goal:"
            font_size: "20dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.90}
            color: "011F4B"
        MDTextField:
            id: goal
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "Name of your Goal"
            mode: 'round'
        MDTextField:
            id: amout_save
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .60}
            hint_text: "Amount you want to save"
            mode: 'round'
        MDTextField:
            id: duration
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .50}
            hint_text: "Duration"
            mode: 'round'        
        MDRectangleFlatButton:
            text: "Next"
            size_hint: .66, .065
            text_color: 1, 1, 1, 1
            md_bg_color: 0.0039, 0.1216, 0.2941, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            halign: 'center'
            on_press: root.manager.current = 'signup' 
        
        MDRectangleFlatButton:
            text: "Skip"
            text_color: '#808080'
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5,"center_y": 0.05}
            on_press: root.manager.current = 'signup'

<SignupScreen>
    name: 'signup'
    Screen:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_press: root.manager.current = 'startup2'
        MDLabel:
            text: "Sign Up"
            font_size: "30dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.90}
            color: "011F4B"
        MDLabel:
            text: "Create your account:"
            font_size: "20dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.80}
            color: "011F4B"
        MDTextField:
            id: name
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "Name"
            mode: 'round'
        MDTextField:
            id: password
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .60}
            hint_text: "Password"
            mode: 'round'
        MDTextField:
            id: email
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .50}
            hint_text: "Username"     
            mode: 'round'   
        MDRectangleFlatButton:
            text: "Sign up"
            size_hint: .66, .065
            text_color: 1, 1, 1, 1
            md_bg_color: 0.0039, 0.1216, 0.2941, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            halign: 'center'
            on_press: root.manager.current = 'dashboard' 
        
        MDRectangleFlatButton:
            text: "Log In"
            text_color: '#808080'
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5,"center_y": 0.05}
            on_press: root.manager.current = 'login'


<LoginScreen>
    name: 'login'
    Screen:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": 0.95}
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            on_press: root.manager.current = 'signup'
        MDLabel:
            text: "Log In"
            font_size: "30dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.90}
            color: "011F4B" 
            theme_text_color: 'Primary'           
        MDTextField:
            id: name
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .7}
            hint_text: "Username"
            icon_right: "account"
            mode: 'round'
        MDTextField:
            id: password
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .60}
            hint_text: "Password"
            password: True
            mode: 'round'
            icon_right: "eye-off"
        MDRectangleFlatButton:
            text: "Log In"
            size_hint: .66, .065
            text_color: 1, 1, 1, 1
            md_bg_color: 0.0039, 0.1216, 0.2941, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            halign: 'center'
            on_press: root.manager.current = 'dashboard'        
        MDRectangleFlatButton:
            text: "Forgot Password?"
            size_hint: .60, .055
            text_color: '#808080'
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": 0.5,"center_y": 0.30}
            on_press: root.manager.current = 'dashboard'

<DashboardScreen>
    name: 'dashboard'
    Screen:
        MDLabel:
            text: "Dashboard"
            font_size: "30dp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.90}
            color: "011F4B"
