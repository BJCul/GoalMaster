DashboardScreen:
    screen_mngr: screen_mngr

    ScreenManager:
        id: screen_mngr

        Screen:
            id: tracker
            name: "tracker"

            MDBoxLayout:
                orientation: "vertical"
                

                MDTopAppBar:
                    title: "My Dashboard"
                    elevation: 1
                    left_action_items: [['menu', lambda x: x]]
                    md_bg_color: "#0F1035"

                    #md_bg_color: "#B19470"

                MDFloatLayout:
                        
                    MDCard:
                        id: piggybank
                        #elevation: 3
                        padding: 4
                        size_hint: None, None
                        size: "300dp", "100dp"
                        md_bg_color: "#0F1035"
                        pos_hint: {"center_x": 0.5, "center_y": .85}
                        on_release: root.piggycard_click()

                        MDLabel:
                            text: "Piggy Bank"
                            theme_text_color: "Custom"
                            text_color: "#FFFFFF"
                            halign: "center"
                    MDCard:
                        id: tracker
                        padding: 4
                        size_hint: None, None
                        size: "300dp", "100dp"
                        md_bg_color: "#0F1035"
                        pos_hint: {"center_x": 0.5, "center_y": 0.65}
                        on_release: root.piggycard_click()
                        on_press: screen_mngr.current = "history"
                        
                        MDLabel:
                            text: "Tracker"
                            theme_text_color: "Custom"
                            text_color: "#FFFFFF"
                            halign: "center"
                    
                    MDCard:
                        id: history
                        padding: 4
                        size_hint: None, None
                        size: "300dp", "100dp"
                        md_bg_color: "#0F1035"
                        pos_hint: {"center_x": 0.5, "center_y": 0.45}
                        
                        MDLabel:
                            text: "History"
                            theme_text_color: "Custom"
                            text_color: "#FFFFFF"
                            halign: "center"
        
        Screen:
            id: history
            name: "history"
            
            
            MDBoxLayout:
                orientation: "vertical"
                

                MDTopAppBar:
                    title: "TRACKER"
                    elevation: 1
                    left_action_items: [['menu', lambda x: x]]
                    md_bg_color: "#0F1035"

                    #md_bg_color: "#B19470"
                
                MDFloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 0.9}
                    #md_bg_color: "#B19470"
                    MDLabel:
                        text: "Daily Expenses"
                        theme_text_color: "Custom"
                        text_color: "#0F1035"
                        halign: "center"
                        pos_hint: {"center_x": 0.5, "center_y": 0.8}
                        font_style: "H5"
                        



                MDFloatLayout:                                           
                    MDCard:
                        id: list
                        radius: dp(10)
                        padding: dp(15)
                        size_hint: None, None
                        size: "300dp", "400dp"
                        md_bg_color: "#0F1035"
                        pos_hint: {"center_x": 0.5, "center_y": 0.9}
                        orientation: 'vertical'

                        MDLabel:
                            text: "Item"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: "#FFFFFF"
                            pos_hint: {"center_x": 0.1}
                        
                        MDLabel:
                            text: "Price"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: "#FFFFFF"
                            pos_hint: {"center_x": 0.89, "center_y": 0.6}

                    
                        MDScrollView:
                            do_scroll_y: True
                            do_scroll_x: False
                            height: 340
                            size_hint_y: None
                            pos_hint: {"center_x": 0.5, "center_y": 0.9}

                            MDBoxLayout:
                                orientation: "vertical"
                                size_hint_y: None
                                adaptive_height: True
                                pos_hint: {'center_x': 0.5,'center_y': 0.6}


                                MDLabel:
                                    halign: 'center'
                                    text:'This app provides a simple, easy, and fast note-taking experience; surely a great helper in doing lists and scribbling on-the-spot ideas.\n\n'
                                    theme_text_color: "Custom"
                                    text_color: "#FFFFFF"
                                    adaptive_height: True
                                
                                MDLabel:
                                    halign: 'center'
                                    text: "\n\nahahahahahahha"
                                    theme_text_color: "Custom"
                                    text_color: "#FFFFFF"
                
                    
                    MDFillRoundFlatButton:
                        id: btn
                        text: "ADD"
                        #font_name: "Poppins-SemiBold"
                        text_color: "white"
                        md_bg_color: "#0F1035"
                        size_hint_x: 0.35
                        pos_hint: {"center_x": 0.49, "center_y": 0.19}
                        on_press: screen_mngr.current = "tracker"
                    

                            


   





